<table class="table table-bordered">
  <thead>
    <tr>
      <td colspan="2">
        Transaction
        <a target="_blank" href="https://dashboard.scanpay.dk/{{ shopid }}/{{ trnid }}">#{{ trnid }}</a>
      </td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Authorized</td>
      <td>{{ authorized }}</td>
    </tr>
    <tr>
      <td>Captured</td>
      <td>{{ captured }}</td>
    </tr>
    <tr>
      <td>Refunded</td>
      <td>{{ refunded }}</td>
    </tr>
    {% if authorized == voided %}
      <tr>
        <td>Voided</td>
        <td>{{ voided }}</td>
      </tr>
    {% endif %}
  </tbody>
</table>
